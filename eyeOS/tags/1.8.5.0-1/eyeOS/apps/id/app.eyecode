function id_run($params=null) {
	global $currentUser;
	$groups = um('getCurrentGroups');
	$groupStr = "";
	$first = 0;
	foreach($groups as $group=>$value) {
		if($first == 0) {
			$groupStr .= $group;
			$first = 1;
		} else {
			$groupStr .= ','.$group;
		}
	}
	eyeX('print',array('user='.$currentUser.' groups='.$groupStr));
	proc('end');
}

