		if(eyeXML('setXMLConfig', array(CONFIG_NAME, CONFIG_NAME.'.xml', $config))) {
			eyeX('sendMessage', array('msg' => 'ListApps', 'params' => '.'));
			eyeX('sendMessage', array('msg' => 'refreshDock', 'params' => '.'));
		}
	}
