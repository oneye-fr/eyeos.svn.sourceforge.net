	}
	
	$myWindow2 = new Window(array('name' => 'WND2', 'father' => 'eyeApps', 'removepid' => 0,
	 'title' => 'Group properties', 'width' => 350, 'height' => 160, 'cent' => 1,
	 'type' => NOLIST_CLOSE_WINDOW));
