	//Name
	$myLabel1 = new Label(array('name' => 'lblgroupName','father' => 'WND2_Content','x' => 30,
	 'y' => 30,'text' => 'Group Name', 'width' => 100));
	$myLabel1->show();
	
	$myHidden1 = new Hidden(array('name' => 'oldGroupName', 'father' => 'WND2', 'text' => $groupName));
