function eyeManageApps_run($params=null) {
	global $myPid;
	$myWindow = new Window(array(
		'name' => 'eyeManageAppsWND',
		'father' => 'eyeApps',
		'title' => 'Manage Applications',
		'width' => 775,
		'height' => 525,
		'type' => NORESIZE_WINDOW,
		'savePosition' => 1
	));
	$myWindow->show();
	eyeX('rawjs',array('js' => 'document.getElementById("'.$myPid.'_eyeManageAppsWND_Content").style.overflow="hidden";'));
	
	eyeX('loadCSS', array('url' => 'index.php?version='.EXTERN_CACHE_VERSION.'&extern=apps/eyeManageApps/css/eyeManageApps.css', 'id' => 'eyeManageApps'));
	
	$myToolbar = new Toolbar(array('name'=>'myBar','father'=>'eyeManageAppsWND_Content'));
	$myToolbar->show();
	$myToolbar->addItem('createGroup', 'index.php?version=' . EXTERN_CACHE_VERSION . '&theme=1&extern=images/toolbar/create.png','Create Group');
	$myToolbar->addItem('addApplication','index.php?version='.EXTERN_CACHE_VERSION.'&theme=1&extern=images/toolbar/installapps.png','Add Application');
	$myToolbar->addLine();
	$myToolbar->addItem('clickProperties', 'index.php?version=' . EXTERN_CACHE_VERSION . '&theme=1&extern=images/toolbar/edit.png','Properties');
	$myToolbar->addItem('clickDelete', 'index.php?version=' . EXTERN_CACHE_VERSION . '&theme=1&extern=images/toolbar/delete.png','Delete');
	$myToolbar->addLine();
	$myToolbar->addItem('ListApps', 'index.php?version=' . EXTERN_CACHE_VERSION . '&theme=1&extern=images/toolbar/refresh.png','Refresh');
	$myToolbar->addLine();
	$myToolbar->addItem('clickMoveUp', 'index.php?version=' . EXTERN_CACHE_VERSION . '&theme=1&extern=images/toolbar/up.png', 'Move Up');
	$myToolbar->addItem('clickMoveDown', 'index.php?version=' . EXTERN_CACHE_VERSION . '&theme=1&extern=images/toolbar/down.png', 'Move Down');
	
	$myContainer = new Container(array(
		'name' => 'appsContainer',
		'father' => 'eyeManageAppsWND_Content',
		'x' => 2,
		'y' => 60,
		'width' => 771,
		'height' => 441
	));
	$myContainer->show();
	eyeX('rawjs',array('js' => 'document.getElementById("'.$myPid.'_appsContainer_Container").style.width="771px";document.getElementById("'.$myPid.'_appsContainer_Container").style.overflowX="hidden";document.getElementById("'.$myPid.'_appsContainer_Container").style.overflowY="auto";'));
	eyeWidgets('serialize', array($myContainer));
	
	$myHidden = new Hidden(array(
		'name' => 'context',
		'father' => 'eyeManageAppsWND',
		'text' => ''
	));
	eyeWidgets('serialize', array($myHidden));
	
	eyeX('sendMessage', array('msg' => 'ListApps'));
}

function eyeManageApps_end() {
	eyeWidgets('unserialize');
}

?>
