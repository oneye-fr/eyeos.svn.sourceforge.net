<info>
	<type>Function</type>
	<general>
		<name>loadLang</name>
		<tags>
			<tag>function</tag>
			<tag>library</tag>
			<tag>i18n</tag>
		</tags>
		<shortDesc>Loads an app language file.</shortDesc>		
	</general>	
	<changelog>
		<trace>
			<version>1.0</version>
			<desc>Created.</desc>
		</trace>
	</changelog>
	<definition>
		<functionName>loadLang</functionName>
		<syntax>i18n('loadLang', array($app))</syntax>
		<desc>Loads the desired language file of the specified application.</desc>
		<params>
			<type>required</type>
			<name>app</name>
			<desc>Name of the application.</desc>
		</params>
		<return>If the application or the user's language file cannot be found, returns false.</return>
	</definition>
</info>