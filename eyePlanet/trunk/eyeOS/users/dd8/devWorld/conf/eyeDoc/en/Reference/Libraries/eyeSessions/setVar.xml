<info>
	<type>Function</type>
	<general>
		<name>setVar</name>
		<tags>
			<tag>function</tag>
			<tag>library</tag>
			<tag>eyesessions</tag>
		</tags>
		<shortDesc>Creates a new variable.</shortDesc>		
	</general>	
	<changelog>
		<trace>
			<version>1.0</version>
			<desc>Created.</desc>
		</trace>
	</changelog>
	<definition>
		<functionName>setVar</functionName>
		<syntax>eyeSessions('setVar', array($varName, $varValue))</syntax>
		<desc>Sets a session variable named 'varName' with the value 'varValue'.</desc>
		<params>
			<type>required</type>
			<name>varName</name>
			<desc>Name of the new variable. In case the a variable with that name exists, its value will be replaced.</desc>
		</params>
		<params>
			<type>required</type>
			<name>varValue</name>
			<desc>Value of the variable.</desc>
		</params>
		<return>This function does not return any value.</return>
	</definition>
</info>